<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobileappdevelopment.kevinholmes.gameoflife.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <mobileappdevelopment.kevinholmes.gameoflife.CellGridView
            android:id="@+id/cellGridView"
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/newGridButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/background_dark"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/new_canvas" />

            <ImageButton
                android:id="@+id/paintButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/background_dark"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/paint" />

            <ImageButton
                android:id="@+id/randomizeButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/background_dark"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dice" />

            <ImageButton
                android:id="@+id/cutButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/background_dark"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cut" />

            <ImageButton
                android:id="@+id/copyButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/background_dark"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/copy" />

            <ImageButton
                android:id="@+id/pasteButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/background_dark"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/paste" />

            <ImageButton
                android:id="@+id/saveButton"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/background_dark"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/save" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
